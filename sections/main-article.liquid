{{ 'article.css' | asset_url | stylesheet_tag }}

<div class="container">
  <h1 class="section__heading h1 text-main text-center">{{ article.title }}</h1>
  <div class="article-author">
    <p>{{ article.author }}</p>
    <span class="article-date">{{ article.created_at }}</span>
  </div>
  <div class="article-media">
    <img src="{{ article.image | img_url: '2000x' }}" alt="" class="article-media full-width object-cover">
  </div>
  <div class="article-content text-light">{{ article.content }}</div>
</div>

{% schema %}
{
  "name": "main-article",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "main-article",
      "settings": {},
      "blocks": []
    }
  ]
}
{% endschema %}
