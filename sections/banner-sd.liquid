<section
  class="banner flex-center text-center p-relative"
  {% if section.settings.image != blank %}
  style="background: url({{ section.settings.image | img_url: '1500x1010' }}) center/cover no-repeat;"
  {% endif %}>
  {% if section.settings.image == blank %}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'full-width full-height placeholder-bg-cl placeholder-banner' }}
  {% endif %}
  <div class="banner__container transfom-center p-absolute full-width">
    <h3 class="banner__label h3 text-center text-uppercase banner-shadow">{{ section.settings.sub-heading }}</h3>
    <h2 class="banner__heading h1 text-center banner-shadow">{{ section.settings.heading }}</h2>
    {% comment %} <a href="{{ section.settings.link }}" class="btn btn--shop-now banner__btn banner-shadow">{{ section.settings.linktext }}</a> {% endcomment %}
  </div>
</section>

{% schema %}
  {
    "name": "banner-sd",
    "settings": [
      {
        "type": "text",
        "id": "sub-heading",
        "label": "sub-heading",
        "default": "Super deal up to 50%"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "Decor for halloween"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Button link"
      },
      {
        "id": "linktext",
        "type": "text",
        "label": "Button text",
        "default": "Shop now"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "background-image"
      }
    ],
    "presets": [
      {
        "name": "banner-sd",
        "settings": {},
        "blocks": []
      }
    ]
  }
{% endschema %}