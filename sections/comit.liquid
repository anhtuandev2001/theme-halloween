
  <div class="container">
    <div class="row justify-center">
      {% for block in section.blocks %}
        <div class="col l-4 comit__item--gap">
          <div class="comit__item d-flex align-center flex-col">
            <div class="comit__img boder-r-50">
              {% if block.settings.logo != blank %}
                <img
                  src="{{ block.settings.logo | img_url: '1000x900' }}"
                  alt="card"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  loading="lazy"
                  class="icon-card">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'icon-card plateholder-product plateholder-bg-cl' }}
              {% endif %}
            </div>
            <h5 class="comit__heading h5">{{ block.settings.heading }}</h5>
            <p class="comit__decription font-lato text-center">{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>


{% schema %}
  {
    "name": "comit",
    "settings": [],
    "tag": "section",
"class": "section",
    "blocks": [
      {
        "type": "comit",
        "name": "comit",
        "limit": 6,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "heading",
            "default": "Free Shipping & Returns"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "text"
          }, {
            "type": "image_picker",
            "id": "logo",
            "label": "logo"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "comit",
        "settings": {},
        "blocks": []
      }
    ]
  }
{% endschema %}