
  <div class="container">
    <h3 class="section__heading h2 text-center">how to decor your home
    </h3>
    <div class="decor__movie p-relative">
      <iframe
        width="100%"
        height="700"
        src="{{ section.settings.link }}"
        title="YouTube video player"
        allow="autoplay"
        allowfullscreen
        class="hide decor__video"></iframe>
      {%- if section.settings.image != blank -%}
        <img
          width="{{ image.width }}"
          height="{{ image.height }}"
          loading="lazy"
          src="{{ section.settings.image | img_url: '1920x1080' }}"
          alt="image collection"
          class="decor__img js-decor-img" />
      {%- elsif section.settings.image == blank -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-bg-cl decor__img js-decor-img placeholder-decor full-width' }}
      {%- endif -%}
      <button class="movie__play js-movie__play boder-r-50 transfom-center p-absolute">
        <span class="play-icon">
          {% render 'icon_play' %}
        </span>
      </button>
    </div>
  </div>


{% schema %}
  {
    "name": "video",
    "tag": "section",
"class": "section",
    "settings": [
      {
        "type": "url",
        "label": "movie link",
        "id": "link"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "background image"
      }
    ],
    "presets": [
      {
        "name": "video",
        "settings": {},
        "blocks": []
      }
    ]
  }
{% endschema %}